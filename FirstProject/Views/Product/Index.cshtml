@model IEnumerable<Product>
@* ProductId, Title, Price, Description, Quantity, ImagePath.*@
<table class="table text-center">
    <body style="background-color:lightblue">
    <thead>
        <tr>
            <th scope="col">ProductId</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Quantity</th>
            <th scope="col">Image</th>
            <th scope="col">Category</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <body>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="col">@item.ProductId</th>
                <th scope="col">@item.Title</th>
                <th scope="col">@item.Price</th>
                <th scope="col">@item.Description</th>
                <th scope="col">@item.Quantity</th>
                <th scope="col">
                    <img src="~/images/products/@item.ImagePath" alt="Product Image" class="img-thumbnail product-image" style="width: 55px; height: 42px; cursor: pointer;" />
                </th>
                <th scope="col">@item.Category!.Name</th>
                <th scope="col">
                <a href="~/Product/ViewDetails/@item.ProductId" class="btn btn-outline-primary mx-2">View</a>
                <a href="~/Product/Edit/@item.ProductId" class="btn btn-outline-warning mx-2">Edit</a>
                <a href="~/Product/Delete/@item.ProductId" class="btn btn-outline-danger mx-2">Delete</a>
                </th>
            </tr>
        }
    </body>
    <tfoot>
        <h1 style="color:darkblue; margin-left:450px ">Book Store</h1>
        <a href="~/Product/Create" class="btn btn-outline-success m-3" style="color:mintcream">Add Product</a>
    </tfoot>
    </body>
</table>

<!-- Modal for image popup -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <img id="modalImage" src="" alt="Image Preview" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.product-image').forEach(img => {
            img.addEventListener('click', function () {
                // Set the modal image source to the clicked image source
                document.getElementById('modalImage').src = this.src;

                // Show the modal
                var myModal = new bootstrap.Modal(document.getElementById('imageModal'));
                myModal.show();
            });
        });
    </script>
}


